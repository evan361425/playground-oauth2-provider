{
  "env": {
    "es2021": true
  },
  "extends": [
    "google",
    "plugin:security/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "security"
  ],
  "rules": {
    "indent": ["error", 2],
    "max-len": ["warn", {"code": 200, "tabWidth": 2}],
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off"
  }
}
